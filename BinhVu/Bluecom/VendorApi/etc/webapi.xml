<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route url="/V1/vendor/:id" method="GET">
        <service class="Bluecom\VendorRepository\Api\VendorRepositoryInterface" method="load"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/vendor" method="POST">
        <service class="Bluecom\VendorRepository\Api\VendorRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/vendor/search" method="GET">
        <service class="Bluecom\VendorRepository\Api\VendorRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/vendor/:id/products" method="GET">
        <service class="Bluecom\VendorRepository\Api\VendorRepositoryInterface" method="getAssociatedProductIds"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>