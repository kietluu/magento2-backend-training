<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd" layout="3columns">
	<body>
		<referenceContainer name="content">
			<block class="Bluecom\OrderInfo\Block\OrderInfo" name="Bluecom_orderinfo" template="orderinfo.phtml">
			</block>
		</referenceContainer>
		<referenceContainer name="div.sidebar.main">
            <block class="Magento\Framework\View\Element\Text" name="order.left-col">
                <arguments>
                    <argument xsi:type="string" name="text">Left Column</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="div.sidebar.additional">
            <block class="Magento\Framework\View\Element\Text" name="order.right-col" before="-">
                <arguments>
                    <argument xsi:type="string" name="text">Right Column</argument>
                </arguments>
            </block>
        </referenceContainer>
	</body>
</page>
